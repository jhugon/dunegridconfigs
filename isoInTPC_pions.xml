<?xml version="1.0"?>

<!-- Production Project -->
<!-- for v1 test-run for protoDUNE, 10k, 10 jobs -->

<!DOCTYPE project [
<!ENTITY release "v06_06_01">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "protoDUNE_likelihoodPID_flat_isoInTPC_pip_v1">
<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/dune/scratch/users/jhugon">
<!ENTITY myworkdir "/dune/app/users/jhugon/work">
<!ENTITY njobs "10">
]>

<project name="&name;">

  <!-- Project size -->
  <numevents>10000</numevents>
  <!-- Try to do 1000 events/job  ~5hr for reco -->

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC</resource>

  <!-- Larsoft information -->
  <larsoft>
      <tag>&release;</tag>
      <qual>e10:prof</qual>
      <local>/dune/app/users/jhugon/likelihoodPID/grid/dunetpc_229f211_larana_6356051.tar</local>
  </larsoft>

  <!-- Project stages -->

  <stage name="gen">
      <fcl>gen_protoDune_likelihoodPID_isoInTPC_pion.fcl</fcl>
      <outdir>&myoutdir;/&release;/gen/&name;</outdir>
      <workdir>&myworkdir;/&release;/gen/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>generated</datatier>
  </stage>

  <stage name="g4">
    <fcl>protoDUNE_g4single.fcl</fcl>
      <outdir>&myoutdir;/&release;/g4/&name;</outdir>
      <workdir>&myworkdir;/&release;/g4/&name;</workdir>
      <numjobs>&njobs;</numjobs>
    <datatier>simulated</datatier>
  </stage>

  <stage name="detsim">
    <fcl>protoDUNE_detsim_single.fcl</fcl>
      <outdir>&myoutdir;/&release;/detsim/&name;</outdir>
      <workdir>&myworkdir;/&release;/detsim/&name;</workdir>
      <numjobs>&njobs;</numjobs>
    <datatier>detector-simulated</datatier>
  </stage>

  <stage name="reco">
      <fcl>protoDUNE_reco_likelihoodPID.fcl</fcl>
      <outdir>&myoutdir;/&release;/reco/&name;</outdir>
      <workdir>&myworkdir;/&release;/reco/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
  </stage>

  <stage name="likelihood">
      <fcl>protoDUNE_likelihoodmaker.fcl</fcl>
      <inputlist>&myoutdir;/&release;/reco/&name;/files.list</inputlist>
      <outdir>&myoutdir;/&release;/likelihood/&name;</outdir>
      <workdir>&myworkdir;/&release;/likelihood/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
  </stage>

  <stage name="ana">
      <fcl>protoDUNE_ana_hist.fcl</fcl>
      <inputlist>&myoutdir;/&release;/reco/&name;/files.list</inputlist>
      <outdir>&myoutdir;/&release;/ana/&name;</outdir>
      <workdir>&myworkdir;/&release;/ana/&name;</workdir>
      <numjobs>&njobs;</numjobs>
      <datatier>reconstructed-2d</datatier>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
