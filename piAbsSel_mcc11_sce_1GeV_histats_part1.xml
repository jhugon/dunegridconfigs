<!ENTITY tag "TestOfBatchJobs">
<!ENTITY myoutdir "/pnfs/dune/scratch/users/jhugon">
<!ENTITY myworkdir "/pnfs/dune/scratch/users/jhugon/gridworkdir">
<!ENTITY name "protoDUNE_mcc11_sce_1GeV_histats_part1_v7a1_55712adf">
