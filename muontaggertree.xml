<?xml version="1.0"?>

<!-- Production Project -->

<!-- v2 changed to new tarball that writes trajectory info -->
<!-- v3 changed to new tarball that doesn't write traj info
        but does all muons per event. Write to scratch 
        instead of persistent -->
<!-- v4 new tarball: add pdg code, muon tagger hit points,
        and distance from traj points to line between tagger 
        hits. Also, turned hits back on -->

<!DOCTYPE project [
<!ENTITY release "v06_05_00">
<!ENTITY file_type "mc">
<!ENTITY run_type "physics">
<!ENTITY name "muontaggertree_v4">
<!ENTITY tag "mcc6.0">
]>

<project name="&name;">

  <!-- Group -->
  <group>dune</group>

  <!-- Project size -->
  <numevents>5400</numevents>

  <!-- Operating System -->
  <os>SL6</os>

  <!-- Batch resources -->
  <resource>DEDICATED,OPPORTUNISTIC</resource>

  <!-- Larsoft information -->
  <larsoft>
    <tag>&release;</tag>
    <qual>e9:prof</qual>
    <local>/dune/app/users/jhugon/dunetpcMuTag/dunetpc_ff3d930926ef.tar</local>
  </larsoft>

  <!-- dune35t metadata parameters -->

  <parameter name ="MCName">&name;</parameter>
  <parameter name ="MCDetectorType">protodune</parameter>

  <!-- Project stages -->

  <stage name="muontaggertree">
    <fcl>muontaggertreemaker.fcl</fcl>
    <inputlist>/dune/app/users/jhugon/dunetpcMuTag/cosmicsv1_reco_v06_02_00.txt</inputlist>
    <outdir>/pnfs/dune/scratch/users/jhugon/&release;/muontaggertree/&name;</outdir>
    <workdir>/dune/app/users/jhugon/work/&release;/muontaggertree/&name;</workdir>
    <numjobs>54</numjobs>
    <datatier>reco</datatier>
    <defname>&name;_&tag;_reco</defname>
  </stage>

  <!-- file type -->
  <filetype>&file_type;</filetype>

  <!-- run type -->
  <runtype>&run_type;</runtype>

</project>
